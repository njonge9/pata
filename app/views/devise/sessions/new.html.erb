<layout-columns class="columns is-centered">
  <layout-column class="is-5 mt-6 p-5 m-4 column box">
    <h2 class="title has-text-centered">
      Log in
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "is-flex is-flex-direction-column") do |f| %>
      <div class="block">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="block">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="block">
          <%= f.check_box :remember_me, class: "checkbox"%>
          <%= f.label :remember_me, class: "label" %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: "button is-primary is-large is-align-self-flex-end mb-3 mt-3" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </layout-column>
</layout-columns>






