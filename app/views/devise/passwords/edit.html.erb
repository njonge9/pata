<layout-columns class="is-centered columns">
  <layout-columns class="is-5 mt-6 p-5 m-4 column box">
    <h2 class="title has-text-centered">
      Change your password
    </h2>
    
    <%= form_for(resource, class: "is-flex is-flex-direction-column", as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource, class: "mb-5 is-italic has-text-centered" %>
      <%= f.hidden_field :reset_password_token %>
    
      <div class="block">
        <%= f.label :password, "New password", class: "label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, class: "input", autofocus: true, autocomplete: "new-password" %>
      </div>
    
      <div class="block">
        <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
        <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Change my password", class: "button is-primary is-align-self-flex-end mb-3 mt-3" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </layout-columns>
</layout-columns>






